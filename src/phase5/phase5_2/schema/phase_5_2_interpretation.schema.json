{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://letsappli.ai/schemas/phase_5_2_interpretation.schema.json",
  "title": "Phase 5.2 Interpretation Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "RoleSummary",
    "RequirementsAnalysis",
    "CapabilityEmphasisSignals",
    "ProjectOpportunitySignals",
    "InterpretationResult",
    "confidence"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "5.2.0"
    },

    "RoleSummary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["summary_text", "evidence_span_ids"],
      "properties": {
        "summary_text": {
          "type": "string",
          "minLength": 1
        },
        "evidence_span_ids": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },

    "RequirementsAnalysis": {
      "type": "object",
      "additionalProperties": false,
      "required": ["explicit_requirements", "implicit_signals"],
      "properties": {
        "explicit_requirements": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "requirement_text",
              "modality",
              "source_span_id"
            ],
            "properties": {
              "requirement_text": {
                "type": "string",
                "minLength": 1
              },
              "modality": {
                "type": "string",
                "enum": ["required", "preferred", "optional"]
              },
              "source_span_id": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "implicit_signals": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "signal_text",
              "evidence_span_ids"
            ],
            "properties": {
              "signal_text": {
                "type": "string",
                "minLength": 1
              },
              "evidence_span_ids": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              }
            }
          }
        }
      }
    },

    "CapabilityEmphasisSignals": {
      "type": "array",
      "minItems": 1,
      "maxItems": 7,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "domain_label",
          "description",
          "evidence_span_ids"
        ],
        "properties": {
          "domain_label": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "evidence_span_ids": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },

    "ProjectOpportunitySignals": {
      "type": "array",
      "minItems": 0,
      "maxItems": 7,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "capability_surface",
          "description",
          "evidence_span_ids"
        ],
        "properties": {
          "capability_surface": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "evidence_span_ids": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },

    "InterpretationResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["structural_notes"],
      "properties": {
        "structural_notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },

    "confidence": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"]
    }
  }
}